# налаштування аудіо # pipewire-pulse
sudo pacman -S apple-t2-audio-config
git clone https://github.com/kekrby/t2-better-audio.git
 cd t2-better-audio
 sudo ./install.sh
 cd ..
sudo pacman -S pipewire-pulse
# кирування звуком # pacmixer
git clone https://aur.archlinux.org/pacmixer.git
 cd pacmixer
 sudo makepkg -sirc
cd ..

# жовта підсвітка # redshift
sudo pacman -S redshift
mkdir ~/.config/redshift
sudo echo '4000' > $HOME/.config/redshift/temp

# вінтелятор # t2fanrd
sudo pacman -S t2fanrd
sudo vim /etc/t2fand.conf {
[Fan1]
low_temp=40
high_temp=70
speed_curve=exponential
always_full_speed=false

[Fan2]
low_temp=40
high_temp=70
speed_curve=exponential
always_full_speed=false
}
sudo systemctl enable --now t2fanrd

# керування блютузом # bluetui
git clone https://aur.archlinux.org/bluetui.git
 cd bluetui
 makepkg -sirc
 cd ..
sudo systemctl start/stop bluetooth

# налаштування курсора
cd /usr/share/icons
sudo wget https://github.com/ful1e5/apple_cursor/releases/download/v2.0.1/macOS.tar.xz
sudo tar -xvf /usr/share/icons/macOS.tar.xz
sudo vim /usr/share/icons/default/index.theme {
[Icon Theme]
Inherits=macOS 
}
sudo echo 'Xcursor.size: 40' > $HOME/.Xresources

# шрифт
sudo wget --directory-prefix=/usr/share/fonts/ https://github.com/IdreesInc/Monocraft/releases/download/v3.0/Monocraft.ttf

# налаштування bash
vim $HOME/.bashrc {
#
# ~/.bashrc
#

# If not running interactively, don't do anything
# [[ $- != *i* ]] && return

# модифікація команд
alias ls="ls --color=auto -a"
alias v="vim"

# рядок перед курсором
off="\[\033[0m\]"
purple="\[\033[1;35m\]"
green="\[\033[1;32m\]"
red="\[\033[1;31m\]"
export PS1="${green}[${off}${purple}\w${off}${green}]${off}${red}\$${off} "

# заголовок вікна
export PROMPT_COMMAND='printf "\033]0;${PWD/#$HOME/~}\007"' 
}

# виключиння сна при закривані кришки
sudo vim /etc/systemd/logind.conf {
HandleLidSwitch=ignore
HandleLidSwitchExternalPower=ignore
HandleLidSwitchDocked=ignore
}

# авто старт xorg
echo 'startx' >> $HOME/.bash_profile
sudo mkdir -p /etc/systemd/system/getty@tty1.service.d
sudo vim /etc/systemd/system/getty@tty1.service.d/override.conf {
[Service]
ExecStart=
ExecStart=-/usr/bin/agetty --autologin vikarchuk --noclear %I $TERM 
}

# перекладач # translate-shell
sudo pacman -S xsel translate-shell xdotool
